<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <RelativeLayout
        android:id="@+id/home_top_component"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="165dp"
        android:background="@drawable/card_back_nine"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/home_credit_score_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:text="Know your Credit Score"
                        android:textColor="@android:color/white"
                        android:layout_centerHorizontal="true"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/home_score_details_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/home_credit_score_text"
                        android:text="Find Out for free.."
                        android:textColor="@android:color/white"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:textSize="15sp"
                        android:gravity="center_horizontal" />
                    <TextView
                        android:id="@+id/score_click_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Click Here"
                        android:layout_below="@id/home_score_details_txt"
                        android:background="@drawable/back_phone"
                        android:layout_centerHorizontal="true"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"
                        />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Finbaz"
        android:background="@drawable/back_phone"
        android:textSize="20sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:textStyle="bold"
        android:textColor="#F41111"

        />

    <LinearLayout
        android:id="@+id/homeLinearId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/home_top_component"
        android:layout_above="@id/navigationId"
        >
        <ScrollView
            android:id="@+id/cards_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <RelativeLayout
                android:id="@+id/servicesRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/ourServicesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Our Services"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    />
                <LinearLayout
                    android:id="@+id/servicesLinearLayout"
                    android:layout_below="@id/ourServicesText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="2"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:padding="5dp"
                        >
                        <androidx.cardview.widget.CardView
                            android:id="@+id/loan_card_id"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:elevation="1dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/back_phone"
                                >
                                <ImageView
                                    android:id="@+id/card_loan_icon"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/loan"
                                    android:background="@drawable/back_phone"
                                    android:layout_centerHorizontal="true"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Loan"
                                    android:textSize="10sp"
                                    android:layout_below="@id/card_loan_icon"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="@android:color/black"
                                    />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/savings_account_card"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:elevation="1dp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/back_phone"
                                >
                                <ImageView
                                    android:id="@+id/card_sav_account_icon"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/savings_account"
                                    android:background="@drawable/back_phone"
                                    android:layout_centerHorizontal="true"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Savings Account"
                                    android:layout_below="@id/card_sav_account_icon"
                                    android:layout_centerHorizontal="true"
                                    android:textAlignment="center"
                                    android:textSize="10sp"
                                    android:textColor="@android:color/black"
                                    android:gravity="center_horizontal" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/insurance_card"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:elevation="1dp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/back_phone"
                                >
                                <ImageView
                                    android:id="@+id/card_insurance_icon"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/insurance"
                                    android:background="@drawable/back_phone"
                                    android:layout_centerHorizontal="true"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Insurance"
                                    android:textSize="10sp"
                                    android:layout_below="@id/card_insurance_icon"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="@android:color/black"
                                    />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/credit_card_card"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:elevation="1dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/back_phone"
                                >
                                <ImageView
                                    android:id="@+id/card_credit_card_icon"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/credit_card"
                                    android:background="@drawable/back_phone"
                                    android:layout_centerHorizontal="true"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Credit Card"
                                    android:layout_below="@id/card_credit_card_icon"
                                    android:textSize="10sp"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="@android:color/black"
                                    />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/demat_card"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:elevation="1dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/back_phone"
                                >
                                <ImageView
                                    android:id="@+id/card_demat_icon"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/demat"
                                    android:background="@drawable/back_phone"
                                    android:layout_centerHorizontal="true"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Demat Account"
                                    android:textSize="10sp"
                                    android:layout_below="@id/card_demat_icon"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="@android:color/black"
                                    />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/credit_score_card"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:elevation="1dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/back_phone"
                                >
                                <ImageView
                                    android:id="@+id/card_cre_score_icon"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/score"
                                    android:background="@drawable/back_phone"
                                    android:layout_centerHorizontal="true"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Credit Score"
                                    android:textSize="10sp"
                                    android:layout_below="@id/card_cre_score_icon"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="@android:color/black"
                                    />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/more_cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:layout_below="@id/servicesLinearLayout">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/back_phone"
                        >

                        <TextView
                            android:id="@+id/card_more_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="More"
                            android:layout_centerInParent="true"
                            android:padding="10dp"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal"
                            />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:src="@drawable/more"
                            android:layout_toRightOf="@id/card_more_text"
                            android:layout_centerVertical="true"
                            />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/image_slider_cardview"
                    app:cardCornerRadius="6dp"
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/more_cardview"
                    >

                    <com.smarteist.autoimageslider.SliderView
                        android:id="@+id/imageSlider"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        app:sliderAnimationDuration="600"
                        app:sliderAutoCycleDirection="back_and_forth"
                        app:sliderAutoCycleEnabled="true"
                        app:sliderIndicatorAnimationDuration="600"
                        app:sliderIndicatorGravity="center_horizontal|bottom"
                        app:sliderIndicatorMargin="15dp"
                        app:sliderIndicatorOrientation="horizontal"
                        app:sliderIndicatorPadding="3dp"
                        app:sliderIndicatorRadius="0dp"
                        app:sliderIndicatorSelectedColor="#5A5A5A"
                        app:sliderIndicatorUnselectedColor="#FFF"
                        app:sliderScrollTimeInSec="1"
                        app:sliderStartAutoCycle="true" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/refer_fnd_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:layout_below="@id/image_slider_cardview"
                    app:cardCornerRadius="6dp"
                    android:elevation="3dp"

                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#E0E6F6"
                        >
                        <TextView
                            android:id="@+id/refer_a_friend_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Refer a Friend"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            />
                        <TextView
                            android:id="@+id/refer_friend_detail_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/refer_a_friend_txt"
                            android:text="Share the app with your friends.."
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:textSize="14sp"
                            android:layout_marginRight="10dp"
                            android:textColor="@android:color/black"
                            />
                        <Button
                            android:id="@+id/refer_fnd_share_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/back_phone"
                            android:text="Share"
                            android:textAllCaps="false"
                            android:textSize="17sp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:layout_below="@id/refer_friend_detail_txt"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="10dp"
                            />

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/share"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/need_help_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_margin="10dp"
                    android:layout_below="@id/refer_fnd_cardView"
                    app:cardCornerRadius="6dp"
                    android:elevation="3dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F8F8FA"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Need Support?"
                            android:textSize="18sp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            />
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:background="@drawable/edit_back"
                            >

                            <!--                            <TextView-->
                            <!--                                android:layout_width="wrap_content"-->
                            <!--                                android:layout_height="wrap_content"-->
                            <!--                                android:layout_gravity="center_vertical"-->
                            <!--                                android:textColor="@android:color/black"-->
                            <!--                                android:text="Query Type:"-->
                            <!--                                android:layout_marginRight="8dp"-->
                            <!--                                />-->

                            <Spinner
                                android:id="@+id/querySpinnerId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:pointerIcon="arrow"
                                style="@style/Widget.AppCompat.Light.DropDownItem.Spinner"
                                />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/query_spinner_msg_edt"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:hint="Enter message (max 250 words)"
                            android:maxLength="250"
                            android:layout_gravity="top"
                            android:paddingLeft="10dp"
                            android:background="@drawable/edit_back"
                            android:layout_margin="10dp"
                            />
                        <Button
                            android:id="@+id/query_spinner_submit_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Submit"
                            android:textAllCaps="false"
                            android:textSize="17sp"
                            android:background="@drawable/card_back_one"
                            android:textColor="@android:color/white"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/thank_you_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    android:layout_below="@id/need_help_cardView"
                    app:cardCornerRadius="6dp"
                    android:elevation="3dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F8F8FA"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/thankful"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thank You"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/refer_a_friend_txt"
                            android:text="We have received your response. Our team will contact you shortly."
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@android:color/black"
                            android:gravity="center_horizontal"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>