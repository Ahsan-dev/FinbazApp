<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreActivity">

    <include
        android:id="@+id/more_services_toolbar_id"
        layout="@layout/savings_toolbar_layout"

        />

    <LinearLayout
        android:id="@+id/more_services_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_below="@id/more_services_toolbar_id"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/loan_card_id"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:elevation="1dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/back_phone"
                android:padding="5dp"
                >
                <ImageView
                    android:id="@+id/card_loan_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/loan"
                    android:background="@drawable/back_phone"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loan"
                    android:textSize="20sp"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/black"
                    />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/savings_account_card"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:elevation="1dp"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/back_phone"
                android:padding="5dp"
                >
                <ImageView
                    android:id="@+id/card_sav_account_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/savings_account"
                    android:background="@drawable/back_phone"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Savings Account"
                    android:textSize="20sp"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/black"
                    android:gravity="center_horizontal" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/insurance_card"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:elevation="1dp"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/back_phone"
                android:padding="5dp"
                >
                <ImageView
                    android:id="@+id/card_insurance_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/insurance"
                    android:background="@drawable/back_phone"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Insurance"
                    android:textSize="20sp"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/black"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/credit_card_card"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:elevation="1dp"
            android:layout_margin="5dp"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/back_phone"
                android:padding="5dp"
                >
                <ImageView
                    android:id="@+id/card_credit_card_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/credit_card"
                    android:background="@drawable/back_phone"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credit Card"
                    android:textSize="20sp"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/black"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/demat_card"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:elevation="1dp"
            android:layout_margin="5dp"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/back_phone"
                android:padding="5dp"
                >
                <ImageView
                    android:id="@+id/card_demat_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/demat"
                    android:background="@drawable/back_phone"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Demat Account"
                    android:textSize="20sp"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/black"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/credit_score_card"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:elevation="1dp"
            android:layout_margin="5dp"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/back_phone"
                android:padding="5dp"
                >
                <ImageView
                    android:id="@+id/card_cre_score_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/score"
                    android:background="@drawable/back_phone"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credit Score"
                    android:textSize="20sp"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/black"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/micelleneous_card"
            android:layout_below="@id/servicesLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:elevation="1dp"
            android:layout_margin="5dp"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/back_phone"
                android:padding="5dp"
                >
                <ImageView
                    android:id="@+id/card_miscellaneous_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/miscellaneous"
                    android:background="@drawable/back_phone"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Miscellaneous"
                    android:textSize="20sp"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/black"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>