<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisclaimTermsPoliciesActivities">

    <include
        layout="@layout/savings_toolbar_layout"
        android:id="@+id/terms_policy_toolbar"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/terms_policy_tablayout"
        android:layout_below="@id/terms_policy_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/terms_policy_viewpager_id"
        android:layout_below="@id/terms_policy_tablayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>