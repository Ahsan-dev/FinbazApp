<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsuranceActivity">

    <include
        layout="@layout/savings_toolbar_layout"
        android:id="@+id/insurance_toolbar_id"/>

    <ScrollView
        android:id="@+id/insurance_all_insurances_scroll"
        android:layout_below="@id/insurance_toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >



            <androidx.cardview.widget.CardView
                android:id="@+id/insurance_two_wheeler_card_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:elevation="5dp"
                app:cardCornerRadius="10dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_back_thirteen"

                    >

                    <TextView
                        android:id="@+id/insurance_two_wheeler_insurance_TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2-Wheeler Insurance"
                        android:layout_centerVertical="true"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentLeft="true" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/two_wheeler_insurance"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"/>

                </RelativeLayout>




            </androidx.cardview.widget.CardView>

                       <androidx.cardview.widget.CardView
                android:id="@+id/insurance_health_insurance_card_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:elevation="3dp"
                app:cardCornerRadius="10dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_back_thirteen"
                    >

                    <TextView
                        android:id="@+id/insurance_health_insurance_TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Health Insurance"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_centerVertical="true"
                        android:layout_margin="20dp"
                        android:layout_alignParentLeft="true" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/health_insurance"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"/>

                </RelativeLayout>




            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/insurance_four_wheeler_insurance_card_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:elevation="5dp"
                app:cardCornerRadius="10dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_back_thirteen"
                    >

                    <TextView
                        android:id="@+id/insurance_four_wheeler_insurance_TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4-Wheeler Insurance"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentLeft="true" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/four_wheeler_insurance"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"/>



                </RelativeLayout>




            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/insurance_life_insurance_card_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:elevation="3dp"
                app:cardCornerRadius="10dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_back_thirteen"
                    >

                    <TextView
                        android:id="@+id/insurance_life_insurance_TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Life Insurance"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_centerVertical="true"
                        android:layout_margin="20dp"
                        android:layout_alignParentLeft="true" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/life_insurance"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"/>

                </RelativeLayout>




            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </ScrollView>


</RelativeLayout>