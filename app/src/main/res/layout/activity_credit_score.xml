<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreditScoreActivity">

    <include
        layout="@layout/savings_toolbar_layout"
        android:id="@+id/credit_score_toolbar_id"/>


    <ScrollView
        android:id="@+id/credit_score_all_company_scroll"
        android:layout_below="@id/credit_score_toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >



            <androidx.cardview.widget.CardView
                android:id="@+id/_score_credit_mantri_card_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_back_thirteen"
                    >

                    <TextView
                        android:id="@+id/credit_score_credit_mantri_detailText"
                        android:layout_below="@id/credit_score_credit_mantri_image_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Free credit score and report online"
                        android:textSize="15sp"
                        android:textColor="#0D4AE4"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"/>

                    <ImageView
                        android:id="@+id/credit_score_credit_mantri_image_logo"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:src="@drawable/credit_mantri_logo"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        />

                </RelativeLayout>




            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/credit_score_paisa_bazar_card_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_back_thirteen"
                    >

                    <TextView
                        android:id="@+id/credit_score_paisa_bazar_detailText"
                        android:layout_below="@id/credit_score_paisabazar_image_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Free credit score and report online"
                        android:textSize="15sp"
                        android:textColor="#0D4AE4"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"/>

                    <ImageView
                        android:id="@+id/credit_score_paisabazar_image_logo"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:src="@drawable/paisabazar"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        />


                </RelativeLayout>




            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/credit_score_indialends_card_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_back_thirteen"
                    >

<!--                    <TextView-->
<!--                        android:id="@+id/credit_score_indialends_TitleText"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="IndiaLends"-->
<!--                        android:textSize="20sp"-->
<!--                        android:layout_centerHorizontal="true"-->
<!--                        android:textColor="@android:color/black"-->
<!--                        />-->
                    <TextView
                        android:id="@+id/credit_score_indialends_detailText"
                        android:layout_below="@id/credit_score_indialends_image_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Free credit score and report online"
                        android:textSize="15sp"
                        android:textColor="#0D4AE4"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"/>

                    <ImageView
                        android:id="@+id/credit_score_indialends_image_logo"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:src="@drawable/indialends_logo"
                       android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        />

                </RelativeLayout>




            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>



</RelativeLayout>